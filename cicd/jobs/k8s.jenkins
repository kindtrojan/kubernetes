#!/usr/bin/env groovy

String basePath = 'k8s-plugin'

folder(basePath) {
    description 'k8s Folder'
}

pipelineJob("$basePath/k8s-hostname") {
    displayName('Kubernetes Hostname')

    logRotator {
        numToKeep(10)
        daysToKeep(30)
    }

    configure { project ->
        project / 'properties' / 'org.jenkinsci.plugins.workflow.job.properties.DurabilityHintJobProperty' {
            hint('PERFORMANCE_OPTIMIZED')
        }
    }

    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url('https://github.com/kindtrojan/kubernetes.git')
                    }
                    branches('*/jenkins_operator')
                }
            }
            scriptPath('cicd/pipelines/hostname_k8s.jenkins')
        }
    }
}
